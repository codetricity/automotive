mixin CafeMenu(title, des)
  h5.text-uppercase.fs-0.fw-bold.mt-4.mb-0!=title
  p=des

mixin CafeMenu1
  section#CafeMenu1
    .border-bottom.border-top.pt-1
    .position-absolute.w-25.all-0(data-zanim-sm!={delay: 0.1} data-zanim-trigger="scroll")
      .h-100.w-100.shadow-lg.d-none.d-sm-block( data-parallax data-rellax-percentage=0.5, data-rellax-speed=3)
        +Background({image: `${CWD}assets/img/cafe-08.jpg`, className: "rounded-right"})

    .container
      .row.justify-content-end.text-center.pt-8
        .col-sm-8
          h2.px-lg-4.text-decoration-underline our food
          p.font-sans-serif.px-lg-4 We work with an array of different roasters, talk to your
            br.d-none.d-md-block
            | barista to find out what's brewing today. Items with 
            span.fa.fa-star.text-danger
            |  are best selling.

          .row.text-center.font-sans-serif.mt-7
            .col-sm-8.col-lg-6.px-sm-5
              h4.py-2.border.mb-5 coff&eacute;e
              +CafeMenu("filter - 3", "classic drip, always fresh.")
              +CafeMenu("<span class='fas fa-star text-danger'></span> espresso - 2.5", "the classic. we serve singles.")
              +CafeMenu("flat 'water' white - 4", "one shot, thin milk. no meth.")
              +CafeMenu("latte - 4", "one shot, milk, served in glass.")
              +CafeMenu("piccolo - 3", "like a latte but mini size.")
              +CafeMenu("long black - 3", "hot water, two shots on top.")

            .col-sm-8.col-lg-6.px-sm-5.mt-6.mt-lg-0
              h4.py-2.border.mb-5 t&eacute;a
              +CafeMenu("lung jing - 4", "vert, chine.")
              +CafeMenu("chung hao - 4", "vert, pollen de jasmin, chine.")
              +CafeMenu("le parfum - 4", "vert, fruits rouges, rhubarbe.")
              +CafeMenu("<span class='fas fa-star text-danger'></span> yunnan imperial - 5", "noir, chine.")
              +CafeMenu("earl grey - 4", "noir, chine.")
              +CafeMenu("le secret - 4", "rouge, vanille jasmin, afrique.")


mixin CafeBanner
  +Section('container-fluid').py-0#cafeBanner
