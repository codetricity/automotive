      .col-lg-6.py-5.py-lg-11.d-flex.justify-content-center.text-center.text-lg-start
        h1.fs-4.fs-sm-5.fw-light.display-4
          | life is
          br.d-none.d-lg-block
          | short, eat
          br.d-none.d-lg-block
          span.fw-black.text-decoration-underline dessert
          |  first!


      .col-lg-6.ms-auto.px-0
        div(data-parallax data-rellax-percentage=0.5, data-rellax-speed=3)
          .py-11.shadow-lg(data-zanim-xs!={delay: 0.1, animation: "zoom-out"} data-zanim-lg!={delay: 0.1} data-zanim-trigger="scroll")
            +Background({
              image: `${CWD}assets/img/cafe-09.jpg`,
              youtube: {
                videoId: "Kra1eWAiKvE",
                startSeconds: 0,
                endSeconds: 57,
              },
              className: 'rounded-left'
            })

