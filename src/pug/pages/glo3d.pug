extends ../layouts/LayoutTheme
include ../mixins/pages/AwardDetailJson.pug

prepend scripts
  script(src=`${CWD}vendors/rellax/rellax.min.js`) 
  script(src=`${CWD}vendors/swiper/swiper-bundle.min.js`)
  script(src=`${CWD}vendors/progressbar/progressbar.min.js`)  

block beforeMainContent
  +FancyNav({navClass: 'fancynavbar-left'})(data-onscroll-fade-in = 'true')

append mainContent
  -
    const data = {
      "company": "Glo3D",
      "tagline": "360 CAR PHOTOGRAPHY SOFTWARE",
      "details":   "Glo3D provides an affordable 360 car photography app that helps \
      automotive dealers with all their media and content creation and distribution. \
      Using just a smartphone, create interactive virtual tours and professional \
      video tours of your vehicle in under 5 minutes! We also offer custom \
      backgrounds, personalized banners and automatically sync to your website, \
      social media, & inventory management.",
      "referenceLink": "https://glo3d.com/",
      "image": "glo3d_detail.png",
      "referenceLinkLabel": "Glo3D"
    }
    const compatData = {
      "showChart": false,
      "connect": 100,
      "takePicture": 75,
      "view": 50,
      "opinion": "Glo3D lists THETA X as a supported camera on their site. Although we have not tested the app, we assume the experience is top-tier",
      "details": "As we have not tested the 11K, we cannot give full points to 11K image viewing"     
    }
  +AwardDetailJson(data, compatData)